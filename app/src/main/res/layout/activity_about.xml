<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.isaaco.campusdrive.AboutActivity"
    android:background="@drawable/background_gradient">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbarAboutUs"
            android:layout_height="wrap_content"
            android:background="@color/background"
            app:title="About Campus Drive"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"/>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:id="@+id/logoCard"
                android:visibility="gone"
                android:backgroundTint="@color/background"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="25dp">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_logo"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginTop ="10sp"
                            android:layout_gravity="center"
                            android:src="@drawable/logo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/campus"
                            android:text="CAMPUS DRIVE"
                            android:textColor="@color/black"
                            android:textSize="35sp" />

                    </LinearLayout>



            </androidx.cardview.widget.CardView>

            <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Connect with us"
    android:gravity="center"
    android:textColor="@color/black"
    android:fontFamily="@font/montserratalternatesbold"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/socials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:weightSum="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/instagram"
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0.3"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/insta" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/facebook"
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_weight="0.3"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/facebook"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/gmail"
                    android:layout_width="78sp"
                    android:layout_weight="0.3"
                    android:layout_height="78sp"
                    android:src="@drawable/gmail"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="@color/white"/>
            </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/aboutDesc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/background"
                android:layout_margin="5dp"
                app:cardCornerRadius="25dp"
                    android:visibility="gone"
                    >
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:text="Thank you so much for downloading Campus Drive app.This app is developed with an aim to connect students around the world."/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text=" Features include:"
                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:text="1) Campus Library - All your class notes in one folder for easy access (online or downloaded for offline use)."
                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:text="2) Campus Meet - Get to connect with your fellow school mates and stay in touch with what's going on around your Campus."
                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:text="3) Campus Market - Buy/Sell commodities around your Campus."
                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:text="Feel free to talk to us through our Socials to get to know us more."/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:fontFamily="@font/secondhandcampus"
                        android:textAlignment="center"
                        android:text="Have a great Campus Experience!!!"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="ðŸ˜ŽðŸ˜ŽðŸ˜Ž"
                        android:textAlignment="center"
                        android:textSize="20sp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>





</LinearLayout>